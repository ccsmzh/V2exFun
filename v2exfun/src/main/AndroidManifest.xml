<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.gino.v2exfun"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="org.gino.v2exfun.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.gino.v2exfun.ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.gino.v2exfun.ui.TopicDetailActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name="org.gino.v2exfun.ui.LoginActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:label="@string/title_activity_login" >
        </activity>
    </application>

</manifest>
