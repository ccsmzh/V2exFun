<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:padding="12.0dip"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:id="@+id/itdt_iv_author_img" />

    <TextView
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_marginLeft="8.0dip"
        android:layout_toRightOf="@id/itdt_iv_author_img"
        android:layout_alignBottom="@id/itdt_iv_author_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itdt_tv_author_name" />

    <TextView
        android:layout_marginTop="10.0dip"
        android:layout_below="@id/itdt_iv_author_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itdt_tv_title"
        android:textSize="16sp" />

    <TextView
        android:textSize="16sp"
        android:layout_marginTop="15dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itdt_tv_content"
        android:layout_below="@id/itdt_tv_title" />
</RelativeLayout>