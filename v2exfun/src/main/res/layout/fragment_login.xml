<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.gino.v2exfun.ui.LoginActivity$PlaceholderFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/fl_iv_logo"
        android:src="@drawable/icon_logo_big"/>

    <RelativeLayout
        android:layout_below="@id/fl_iv_logo"
        android:id="@+id/fl_rl_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/fl_et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="USERNAME" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/fl_rl_username"
        android:id="@+id/fl_rl_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/fl_et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PASSWORD" />
    </RelativeLayout>

    <Button
        android:text="LOGIN"
        android:layout_below="@id/fl_rl_password"
        android:id="@+id/fl_btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
