<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_marginRight="8.0dip"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:id="@+id/itdr_iv_author_img" />

    <TextView
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/itdr_iv_author_img"
        android:id="@+id/itdr_tv_author_name"
        android:layout_alignTop="@id/itdr_iv_author_img" />

    <TextView
        android:layout_marginTop="8.0dip"
        android:textSize="16sp"

        android:layout_toRightOf="@id/itdr_iv_author_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/itdr_tv_author_name"
        android:layout_below="@id/itdr_tv_author_name"
        android:id="@+id/itdr_tv_reply_content"/>
</RelativeLayout>